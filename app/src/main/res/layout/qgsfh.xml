<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/l_jzbh"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qgsfh_v_jzbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/wait_scan"
            android:textSize="13sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/qx_scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qgsfh_l_zb"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/qgsfh_l_zb"
                    app:layout_widthPercent="50%" />

                <LinearLayout
                    android:id="@+id/qgsfh_v_zb_wrapper"
                    style="@style/edit_text_wrapper"
                    android:layout_toRightOf="@+id/qgsfh_l_zb"
                    app:layout_widthPercent="50%">

                    <EditText
                        android:id="@+id/qgsfh_v_zb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qgsfh_l_dp"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/qgsfh_l_dp"
                    app:layout_widthPercent="50%" />

                <LinearLayout
                    android:id="@+id/qgsfh_v_dp_wrapper"
                    style="@style/edit_text_wrapper"
                    android:layout_toRightOf="@+id/qgsfh_l_dp"
                    app:layout_widthPercent="50%">

                    <EditText
                        android:id="@+id/qgsfh_v_dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qgsfh_l_kxs"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/qgsfh_l_kxs"
                    app:layout_widthPercent="50%" />

                <LinearLayout
                    android:id="@+id/qgsfh_v_kxs_wrapper"
                    style="@style/edit_text_wrapper"
                    android:layout_toRightOf="@+id/qgsfh_l_kxs"
                    app:layout_widthPercent="50%">

                    <EditText
                        android:id="@+id/qgsfh_v_kxs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qgsfh_l_qt"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/qgsfh_l_qt"
                    app:layout_widthPercent="50%" />

                <LinearLayout
                    android:id="@+id/qgsfh_v_qt_wrapper"
                    style="@style/edit_text_wrapper"
                    android:layout_toRightOf="@+id/qgsfh_l_qt"
                    app:layout_widthPercent="50%">

                    <EditText
                        android:id="@+id/qgsfh_v_qt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qgsfh_l_qps"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/qgsfh_l_qps"
                    app:layout_widthPercent="50%" />

                <TextView
                    android:id="@+id/qgsfh_v_qps"
                    style="@style/font_value"
                    android:layout_width="0dp"
                    android:layout_toRightOf="@+id/qgsfh_l_qps"
                    android:layout_weight="1"
                    android:text=""
                    app:layout_widthPercent="50%" />

            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qgsfh_b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qgsfh_b_submit" />

        <Button
            android:id="@+id/qgsfh_b_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qgsfh_b_clear" />
    </LinearLayout>
</LinearLayout>
