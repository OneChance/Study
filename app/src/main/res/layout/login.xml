<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:gravity="center">

    <ImageView
            android:src="@mipmap/login_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_marginTop="100dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emp_no"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/emp_no"
            android:textSize="18sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/emp_no"
            app:met_floatingLabelTextSize="14dp"
            app:met_singleLineEllipsis="true"/>

    <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/login"/>

    <Button
            android:id="@+id/btn_config_server"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/config_server"/>

    <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="正在登录"
                android:textColor="#283593"
                android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>