<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pb_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:layout_marginTop="1dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/product_delete"
        android:textColor="@android:color/white" />

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/pandian_v_sequence_num"
            style="@style/font_value"
            android:layout_width="0dp"
            android:text=""
            app:layout_widthPercent="18%" />

        <TextView
            android:id="@+id/pandian_v_brickid"
            style="@style/font_value"
            android:layout_width="0dp"
            android:text=""
            android:layout_toRightOf="@+id/pandian_v_sequence_num"
            android:lines="2"
            app:layout_widthPercent="46%" />

        <LinearLayout
            android:id="@+id/pandian_v_weight_wrapper"
            style="@style/edit_text_wrapper"
            android:layout_toRightOf="@+id/pandian_v_brickid"
            app:layout_widthPercent="18%">

            <EditText
                android:id="@+id/pandian_v_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
