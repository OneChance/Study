<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/l_jzbh"
            android:textColor="#3f51b5"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/yb_v_jzbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/wait_scan"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yb_scan_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_scan_product" />

        <Button
            android:id="@+id/yb_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_save" />
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yb_l_spyy"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/yb_l_spyy"
            app:layout_widthPercent="30%"></TextView>


        <TextView
            android:id="@+id/yb_v_code"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/yb_l_spyy"
            android:layout_weight="1"
            android:text="@string/yb_l_sl"
            app:layout_widthPercent="70%"></TextView>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yb_l_yzd"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/yb_l_yzd"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/yb_l_yzd"
            android:id="@+id/yb_v_yzd_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/yb_v_yzd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


