<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jb_l_brick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/th_brick_id"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_widthPercent="30%" />

        <TextView
            android:id="@+id/jb_v_brick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/jb_l_brick"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="@string/wait_scan"
            android:textSize="13sp"
            app:layout_widthPercent="70%" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jb_l_reason"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/jb_l_reason"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_widthPercent="30%" />

        <Spinner
            android:id="@+id/jb_v_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@+id/jb_l_reason"
            app:layout_widthPercent="70%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jb_l_station"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pb_l_station"
            app:layout_widthPercent="18%" />

        <TextView
            android:id="@+id/jb_brick_id"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/jb_l_station"
            android:layout_weight="1"
            android:text="@string/th_brick_id"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/jb_length"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/jb_brick_id"
            android:layout_weight="1"
            android:text="@string/th_length"
            app:layout_widthPercent="18%" />

        <TextView
            android:id="@+id/jb_bf"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/jb_length"
            android:layout_weight="1"
            android:text="@string/jb_l_bf"
            app:layout_widthPercent="14%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jb_product_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jb_b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jb_b_submit" />
    </LinearLayout>

</LinearLayout>
