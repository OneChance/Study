<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/pbj_l_brick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/brick_id"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/pbj_brick_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/wait_scan"/>
    </LinearLayout>

    <ScrollView
            android:id="@+id/pbj_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/dividers"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/pbj_l_yxbc"
                        style="@style/font_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/pbj_l_yxbc"
                        app:layout_widthPercent="30%"/>

                <TextView
                    android:id="@+id/pbj_v_yxbc"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_toRightOf="@+id/pbj_l_yxbc"
                    android:layout_weight="1"
                    android:text=""
                    app:layout_widthPercent="70%" />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/dividers"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/pbj_l_size"
                        style="@style/font_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/pbj_l_size"
                        app:layout_widthPercent="30%"/>

                <LinearLayout
                        android:id="@+id/pbj_v_size_wrapper"
                        style="@style/edit_text_wrapper"
                        android:layout_toRightOf="@+id/pbj_l_size"
                        app:layout_widthPercent="70%">

                    <EditText
                            android:id="@+id/pbj_v_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/dividers"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/pbj_l_dj"
                        style="@style/font_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/pbj_l_dj"
                        app:layout_widthPercent="30%"/>

                <LinearLayout
                        android:id="@+id/pbj_v_dj"
                        style="@style/edit_text_wrapper"
                        android:layout_toRightOf="@+id/pbj_l_dj"
                        app:layout_widthPercent="70%">

                    <RadioGroup
                            android:id="@+id/pbj_dj_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                        <RadioButton
                                android:id="@+id/dj_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/pbj_dj_yes"
                                android:textColor="@color/text"/>

                        <RadioButton
                                android:id="@+id/dj_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pbj_dj_no"
                                android:textColor="@color/text"/>
                    </RadioGroup>

                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pbj_l_kjcd"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/pbj_l_kjcd"
                    app:layout_widthPercent="30%"/>

                <LinearLayout
                    android:id="@+id/pbj_v_kjcd_wrapper"
                    style="@style/edit_text_wrapper"
                    android:layout_toRightOf="@+id/pbj_l_kjcd"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/pbj_v_kjcd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pbj_l_gghyxcd"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/pbj_l_gghyxcd"
                    app:layout_widthPercent="30%"/>

                <TextView
                    android:id="@+id/pbj_v_gghyxcd"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_toRightOf="@+id/pbj_l_gghyxcd"
                    android:layout_weight="1"
                    android:text=""
                    app:layout_widthPercent="70%" />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/dividers"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pbj_l_ggyy"
                    style="@style/font_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/pbj_l_ggyy"
                    app:layout_widthPercent="30%"/>

                <Spinner
                    android:id="@+id/pbj_v_ggyy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="13dp"
                    android:layout_toRightOf="@+id/pbj_l_ggyy"
                    app:layout_widthPercent="70%" />
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/pbj_b_quali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pbj_b_quali"/>

        <Button
                android:id="@+id/pbj_b_unquali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pbj_b_unquali"/>
    </LinearLayout>
</LinearLayout>
