<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/brick_id"
            android:textColor="#3f51b5"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/pbj_brick_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/wait_scan"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pbj_scan_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_scan_product" />

        <Button
            android:id="@+id/pbj_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_save" />
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_code"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_code"
            app:layout_widthPercent="30%"></TextView>


        <TextView
            android:id="@+id/pbj_v_code"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/pbj_l_code"
            android:layout_weight="1"
            android:text=""
            app:layout_widthPercent="70%"></TextView>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_bb"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_bb"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_bb"
            android:id="@+id/pbj_v_bb_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_bb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="1"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_zcbc"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_zcbc"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_zcbc"
            android:id="@+id/pbj_v_zcbc_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_zcbc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="2"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_zdbc"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_zdbc"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_zdbc"
            android:id="@+id/pbj_v_zdbc_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_zdbc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="3"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_yxbc"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_yxbc"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_yxbc"
            android:id="@+id/pbj_v_yxbc_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_yxbc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="4"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_size"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_size"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_size"
            android:id="@+id/pbj_v_size_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="5"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pbj_l_dj"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pbj_l_dj"
            app:layout_widthPercent="30%"></TextView>

        <LinearLayout
            android:layout_toRightOf="@+id/pbj_l_dj"
            android:id="@+id/pbj_v_dj_wrapper"
            style="@style/edit_text_wrapper"
            app:layout_widthPercent="70%">

            <EditText
                android:id="@+id/pbj_v_dj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="6"
                android:textColor="#283593"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="bold"></EditText>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pbj_b_quali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pbj_b_quali" />

        <Button
            android:id="@+id/pbj_b_unquali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pbj_b_unquali" />
    </LinearLayout>
</LinearLayout>
