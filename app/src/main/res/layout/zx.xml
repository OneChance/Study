<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zx_xh_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/zx_b_l_xh"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_widthPercent="25%"></TextView>

        <TextView
            android:id="@+id/zx_xh_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/zx_xh_head"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:textSize="13sp"
            android:text="@string/wait_scan"
            app:layout_widthPercent="50%"></TextView>

        <Button
            android:id="@+id/zx_b_scan_xz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/zx_xh_v"
            android:layout_weight="1"
            android:text="@string/zx_b_scan_xz"
            app:layout_widthPercent="25%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zx_hh_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/zx_b_l_hh"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_widthPercent="25%"></TextView>

        <TextView
            android:id="@+id/zx_hh_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/zx_hh_head"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:textSize="13sp"
            android:text="@string/wait_scan"
            app:layout_widthPercent="50%"></TextView>

        <Button
            android:id="@+id/zx_b_scan_hz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/zx_hh_v"
            android:layout_weight="1"
            android:text="@string/zx_b_scan_hz"
            app:layout_widthPercent="25%" />
    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zx_l_xh"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/zx_b_l_xh"
            app:layout_widthPercent="50%"></TextView>

        <TextView
            android:id="@+id/zx_b_l_hh"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/zx_l_xh"
            android:layout_weight="1"
            android:text="@string/zx_b_l_hh"
            app:layout_widthPercent="50%"></TextView>

    </android.support.percent.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/zx_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zx_b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zx_b_submit" />

        <Button
            android:id="@+id/zx_b_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zx_b_clear" />
    </LinearLayout>

</LinearLayout>
