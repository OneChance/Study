<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pb_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:layout_marginTop="1dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/product_delete"
        android:textColor="@android:color/white" />

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/pb_v_station"
            style="@style/font_value"
            android:layout_width="0dp"
            android:text=""
            app:layout_widthPercent="20%"></TextView>

        <TextView
            android:id="@+id/pb_brick_id"
            style="@style/font_value"
            android:layout_width="0dp"
            android:text=""
            android:layout_toRightOf="@+id/pb_v_station"
            app:layout_widthPercent="55%"></TextView>

        <TextView
            android:id="@+id/pb_length"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/pb_brick_id"
            android:text=""
            app:layout_widthPercent="25%"></TextView>
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
