<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rk_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:layout_marginTop="1dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/product_delete"
        android:textColor="@android:color/white" />

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dividers"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <Spinner
            android:id="@+id/rk_v_jf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:entries="@array/rk_jf"
            app:layout_widthPercent="18%" />

        <TextView
            android:id="@+id/rk_v_lb"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/rk_v_jf"
            android:text=""
            app:layout_widthPercent="14%" />

        <TextView
            android:id="@+id/rk_v_tm"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/rk_v_lb"
            android:text=""
            app:layout_widthPercent="54%" />

        <TextView
            android:id="@+id/rk_v_sl"
            style="@style/font_value"
            android:layout_width="0dp"
            android:layout_toRightOf="@+id/rk_v_tm"
            android:text=""
            app:layout_widthPercent="14%" />

    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
